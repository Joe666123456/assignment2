{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
  "url":
  "https://raw.githubusercontent.com/Joe666123456/assignment2/main/data/countries_of_the_world.csv"
  },
  "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "Region_selection",
        "bind": {
          "input": "select",
          "labels": [
            "Show All",
            "Latin Amer. & Carib",
            "Asia",
            "Eastern Europe", 
            "Western Europe",
            "Sub-Saharan Africa",
            "Northern Africa",
            "Oceania",
            "Indiana States",
            "Near East",
            "Baltics"
          ],
          "options":[
            null,
            "LATIN AMER. & CARIB",
            "ASIA (EX. NEAR EAST)",
            "EASTERN EUROPE", 
            "WESTERN EUROPE",
            "SUB-SAHARAN AFRICA",
            "NORTHERN AFRICA",
            "OCEANIA",
            "C.W. OF IND. STATES",
            "NEAR EAST",
            "BALTICS"
          ],
          "name": "Region Selection: "
        }
      }
    ],
  "vconcat": [
  {
    "title": "world density & demographic characteristic in 2017",
    "width": 1000,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/Joe666123456/assignment2/main/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Joe666123456/assignment2/main/js/ne_110m_graticules_30.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Joe666123456/assignment2/main/data/countries_of_the_world.csv"
              },
              "key": "Country",
              "fields": ["Population","Birthrate","Deathrate","Area"]
            }
          },{
            "calculate": "datum.Population/datum.Area",
            "as": "Density"
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
             "title": "Density(person/km2) in country",
             "field": "Density",
              "type": "quantitative",
              "scale": {
              "type": "log",
              "domain": [1, 5, 25, 125, 625],
              "range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#e31a1c"]
            }
          },"tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"} ,
            {"field": "Density", "type": "quantitative", "title": "Density", "format": ".2f"},
            {"field": "Population", "type": "quantitative","title": "Population", "format": ","},
            {"field": "Birthrate", "type": "quantitative", "format": ",","title": "Birth Rate"},
            {"field": "Deathrate", "type": "quantitative", "format": ",","title": "Death Rate"}
  
          ]
        } 
        
      }
    ]
  },
  {
    "width": 1000,
    "height": 500,
    "transform": [
      {"filter": "datum.Population > Population_Above"},
      {
        "filter": "Region_selection == null || datum.Region == Region_selection"
  }, {
        "calculate": "datum.Population/datum.Area",
        "as": "Density"
      }
    ],
    "encoding": {
      "y": {
        "field": "Deathrate",
        "type": "quantitative",
        "title": "Death rate",
        "axis": {"tickCount": 6},
        "scale": {"domain": [0, 30]}
  }, "x": {
        "field": "Birthrate",
        "type": "quantitative",
        "title": "Birth rate",
        "axis": {"tickCount": 12},
        "scale": {"domain": [0, 60]}
  } },
  "layer": [ {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Region",
            "type": "nominal",
            "scale": {
              "domain": [
            "LATIN AMER. & CARIB",
            "ASIA (EX. NEAR EAST)",
            "EASTERN EUROPE", 
            "WESTERN EUROPE",
            "SUB-SAHARAN AFRICA",
            "NORTHERN AFRICA",
            "OCEANIA",
            "C.W. OF IND. STATES",
            "NEAR EAST",
            "BALTICS"], 
  "range": [
            "#e41a1c",
            "#984ea3",
            "#ff7f00",
            "#a6cee3",
            "#377eb8",
            "#a65628",
            "#fec44f",
            "#2c7fb8",
            "#7fcdbb",
            "#c994c7"
  ] }
      },
      "opacity": { "value": 0.6}
  } },
  {
  "mark": {
      "type": "text",
      "align": "right",
      "baseline": "middle",
      "dx": -12,
      "fontSize": 11.5,
      "fontStyle": "italic"
    },
    "encoding": {
      "text": {"field": "Country", "type": "nominal"},
      "color": {"value": "black"},
      "opacity": {
        "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'", "value": 1 },
  "value": 0 },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Birthrate", "title":"Birth rate", "type": "quantitative"},
            {"field": "Deathrate",  "title":"Death rate","type": "quantitative"},
            {"field": "Population","type": "quantitative", "format":","},
            {
              "field": "Density",
              "title":"Population per km2",
              "type": "quantitative",
              "format": ".2f"
  } ]
  } }
  ] 
  
  }
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 14}}}